{
  "name": "ngx-color",
  "version": "0.0.0",
  "license": "MIT",
  "homepage": "https://github.com/daimoonis/ngx-color",
  "bugs": "https://github.com/daimoonis/ngx-color/issues",
  "repository": "daimoonis/ngx-color",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:ngx-color:prod": "ng build --app ngx-color --environment production",
    "build:ngx-color-app": "ng build --app ngx-color-app --environment production",
    "ghpages": "ng build --prod",
    "test": "ng test --watch=false --code-coverage --browsers=ChromeCI",
    "test:watch": "ng test --browsers=ChromeCI",
    "test:ci": "ng test --watch=false --code-coverage --no-progress --browsers=ChromeCI",
    "lint": "ng lint ngx-color --type-check --format stylish",
    "lint:fix": "ng lint ngx-color --type-check --fix --format stylish",
    "commit": "git-cz",
    "travis-deploy-once": "travis-deploy-once",
    "publish": "cd dist/packages-dist && npm publish",
    "semantic-release": "cd dist/packages-dist && semantic-release",
    "bundlesize": "npx bundlesize"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.1.2",
    "@angular/common": "6.1.2",
    "@angular/compiler": "6.1.2",
    "@angular/core": "6.1.2",
    "@angular/forms": "6.1.2",
    "@angular/http": "6.1.2",
    "@angular/platform-browser": "6.1.2",
    "@angular/platform-browser-dynamic": "6.1.2",
    "@ctrl/ngx-github-buttons": "2.0.4",
    "@ctrl/tinycolor": "2.2.0",
    "bootstrap": "4.1.3",
    "core-js": "2.5.7",
    "material-colors": "1.2.6",
    "rxjs": "6.2.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.7.4",
    "@angular-devkit/build-ng-packagr": "~0.7.4",
    "@angular/cli": "6.1.3",
    "@angular/compiler-cli": "6.1.2",
    "@angular/language-service": "6.1.2",
    "@types/fs-extra": "5.0.4",
    "@types/jasmine": "2.8.8",
    "@types/node": "10.5.8",
    "@types/rimraf": "2.0.2",
    "codelyzer": "4.4.3",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "fs-extra": "7.0.0",
    "jasmine-core": "3.2.0",
    "karma": "3.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.2.0",
    "karma-mocha-reporter": "2.2.5",
    "ng-packagr": "4.1.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.9.8",
    "travis-deploy-once": "5.0.2",
    "ts-node": "7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "5.11.0",
    "typescript": "2.9.2"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/packages-dist/bundles/ngx-color.umd.min.js",
      "maxSize": "6 kB"
    }
  ]
}
